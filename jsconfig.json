{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@components/ui/*": ["components/ui/*"],
      "@models/*": ["models/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "components/**/*",
    "models/**/*",
    "pages/**/*",
    "utils/**/*",
    "styles/**/*",
    "docs/**/*"
  ]
}
